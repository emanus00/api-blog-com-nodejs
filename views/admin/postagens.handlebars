<h2>Lista de Posts</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small>
            <small>{{categoria.nome}}</small>
        </div>
         <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type= "submit" class="btn btn-danger ">Deletar Postagem</button>
        </form>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn success mt-2">Editar Postagem</button></a>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}