<h2>Categorias: </h2>
<hr>
<div class="card">
    <div class="card-body">
        <div class="categoria-list">
    {{#each categoria}}
        <a href="/categorias/{{slug}}" class="categoria-link">
            <p>{{nome}}</p>
        </a>
    {{else}}
        <p>Nenhuma categoria encontrada.</p>
    {{/each}}
    <a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
        </div>
    </div>
</div>
